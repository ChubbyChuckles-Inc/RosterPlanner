{
  "$schema": "internal://design-tokens.schema.json",
  "version": 1,
  "meta": {
    "generated": false,
    "description": "Core design tokens for RosterPlanner GUI. Colors are semantic; do not hardcode raw hex in components.",
    "contact": "gui-team"
  },
  "color": {
    "background": {
      "base": "#101418",
      "elevated": "#1b2127",
      "sunken": "#0b0e11"  
    },
    "surface": {
      "primary": "#25313d",
      "secondary": "#303d4a",
      "tertiary": "#3a4958"
    },
    "text": {
      "primary": "#f5f7fa",
      "secondary": "#c3ced9",
      "muted": "#8d98a3",
      "inverted": "#0d1114"
    },
    "accent": {
      "primary": "#3d8bfd",
      "primaryHover": "#5c9dfd",
      "primaryActive": "#1e6edd",
      "warning": "#f5a524",
      "error": "#e5484d",
      "success": "#2f9e44",
      "info": "#2a91d8"
    },
    "border": {
      "light": "#3a454f",
      "medium": "#4b5460",
      "strong": "#5d6774",
      "focus": "#3d8bfd"
    }
  },
  "radius": {
    "xs": 2,
    "sm": 4,
    "md": 6,
    "lg": 8,
    "xl": 12,
    "pill": 999
  },
  "spacing": {
    "0": 0,
    "1": 2,
    "2": 4,
    "3": 8,
    "4": 12,
    "5": 16,
    "6": 20,
    "7": 24,
    "8": 32,
    "9": 40,
    "10": 48
  },
  "elevation": {
    "0": 0,
    "1": 1,
    "2": 2,
    "3": 4,
    "4": 8
  },
  "typography": {
    "fontFamily": "'Segoe UI', 'Inter', 'Roboto', sans-serif",
    "baseSize": 14,
    "modularRatios": {
      "minor": 1.125,
      "major": 1.25
    },
    "scale": {
      "xs": 11,
      "sm": 12,
      "base": 14,
      "md": 16,
      "lg": 18,
      "xl": 22,
      "xxl": 28
    },
    "headings": {
      "h1": "xxl",
      "h2": "xl",
      "h3": "lg",
      "h4": "md",
      "h5": "base",
      "h6": "sm"
    },
    "lineHeight": {
      "tight": 1.15,
      "normal": 1.35,
      "relaxed": 1.55
    }
  },
  "motion": {
    "duration": {
      "instant": 80,
      "fast": 140,
      "base": 200,
      "slow": 260,
      "deliberate": 360
    },
    "easing": {
      "standard": "cubic-bezier(0.4, 0.0, 0.2, 1)",
      "accelerate": "cubic-bezier(0.4, 0.0, 1, 1)",
      "decelerate": "cubic-bezier(0.0, 0.0, 0.2, 1)",
      "emphasized": "cubic-bezier(0.2, 0.0, 0, 1)"
    }
  }
}
